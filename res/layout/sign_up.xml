<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bakgrund9"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/username_edit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/displayname"
        android:layout_alignBottom="@+id/displayname"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dip"
        android:layout_toRightOf="@+id/username"
        android:alpha="0.7"
        android:background="@color/white"
        android:ems="10"
        android:hint="Display-name" />

    <TextView
        android:id="@+id/confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/password"
        android:layout_alignLeft="@+id/displayname"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/username_edit"
        android:alpha="0.7"
        android:background="@drawable/lock4"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/gray1"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_above="@+id/displayname"
        android:layout_alignLeft="@+id/displayname"
        android:layout_alignRight="@+id/displayname"
        android:alpha="0.7"
        android:background="@drawable/id6"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/gray1"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/confirm_password"
        android:layout_alignLeft="@+id/username_edit"
        android:layout_alignRight="@+id/username_edit"
        android:layout_alignTop="@+id/confirm_password"
        android:layout_toRightOf="@+id/confirm_password"
        android:alpha="0.7"
        android:background="@color/white"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/id_edit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/username_edit"
        android:layout_alignTop="@+id/username"
        android:layout_toRightOf="@+id/username"
        android:alpha="0.7"
        android:background="@color/white"
        android:ems="10"
        android:hint="Student-id" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/createuserbutton"
        android:layout_alignLeft="@+id/confirm_password"
        android:layout_alignRight="@+id/confirm_password"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="1dp"
        android:alpha="0.7"
        android:background="@drawable/lock4"
        android:gravity="center_vertical"
        android:textColor="@color/gray1"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/displayname"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/confirm_password"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="1dp"
        android:alpha="0.7"
        android:background="@drawable/user4"
        android:gravity="center_vertical"
        android:textColor="@color/gray1"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/password_confirm_edit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/password_edit"
        android:layout_alignTop="@+id/password"
        android:layout_toRightOf="@+id/password"
        android:alpha="0.7"
        android:background="@color/white"
        android:ems="10"
        android:hint="Confirm password"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/createuserbutton"
        style="@style/AppBaseTheme"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/password"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/password_confirm_edit"
        android:layout_marginBottom="40dp"
        android:alpha="1"
        android:background="@drawable/buttonshape"
        android:paddingLeft="200dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/createuser_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/createuserbutton"
        android:layout_alignLeft="@+id/createuserbutton"
        android:layout_alignRight="@+id/createuserbutton"
        android:layout_alignTop="@+id/createuserbutton"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Create User"
        android:textColor="@color/gray1"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/CreateUserIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/id_edit"
        android:layout_centerHorizontal="true"
        android:alpha="0.8"
        android:background="@drawable/createuser3" />

</RelativeLayout>