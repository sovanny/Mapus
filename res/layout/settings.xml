<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.03" >
    
    

    <ImageView
        android:id="@+id/log_out_btn"
        style="@style/AppBaseTheme"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:alpha="0.9"
        android:background="@drawable/buttonshape"
        android:gravity="center_horizontal"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30dp" />
    
    
    
    

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/log_out_btn"
        android:layout_alignLeft="@+id/log_out_btn"
        android:layout_alignRight="@+id/log_out_btn"
        android:layout_alignTop="@+id/log_out_btn"
        android:gravity="center_vertical|center_horizontal"
        android:text="Log Out"
        android:textColor="@color/gray1" />

            <ImageView
                android:id="@+id/change_dn_btn"
                style="@style/AppBaseTheme"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_above="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:alpha="0.9"
                android:background="@drawable/buttonshape"
                android:gravity="center_horizontal"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/change_dn_btn"
                android:layout_alignLeft="@+id/change_dn_btn"
                android:layout_alignRight="@+id/change_dn_btn"
                android:layout_alignTop="@+id/change_dn_btn"
                android:gravity="center_vertical|center_horizontal"
                android:text="Change display-name"
                android:textColor="@color/gray1" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/change_dn_btn"
                android:layout_alignLeft="@+id/change_pw_btn"
                android:layout_alignTop="@+id/change_dn_btn"
                android:src="@drawable/user5" />

            <ImageView
                android:id="@+id/change_pw_btn"
                style="@style/AppBaseTheme"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_above="@+id/log_out_btn"
                android:layout_alignLeft="@+id/change_dn_btn"
                android:layout_marginBottom="150dp"
                android:alpha="0.9"
                android:background="@drawable/buttonshape"
                android:gravity="center_horizontal"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/change_pw_btn"
                android:layout_alignLeft="@+id/imageView2"
                android:layout_alignRight="@+id/change_pw_btn"
                android:layout_alignTop="@+id/change_pw_btn"
                android:gravity="center_vertical|center_horizontal"
                android:text="Change password"
                android:textColor="@color/gray1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/change_pw_btn"
                android:layout_alignLeft="@+id/change_pw_btn"
                android:layout_alignRight="@+id/imageView1"
                android:layout_alignTop="@+id/change_pw_btn"
                android:src="@drawable/lock5" />

</RelativeLayout>