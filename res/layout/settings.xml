<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.03" >

    <EditText
        android:id="@+id/edit_conf_pass_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/confirm_pass_label"
        android:ems="10" />

    <EditText
        android:id="@+id/edit_new_pass_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/new_pass_label"
        android:ems="10" />

    <EditText
        android:id="@+id/edit_current_pass_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/current_pass_label"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edit_disp_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/change_disp_name_label"
        android:ems="10" />

    <TextView
        android:id="@+id/change_disp_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/current_pass_label"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"
        android:text="@string/change_name"
        android:textColor="@color/gray1" />

    <TextView
        android:id="@+id/current_pass_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_disp_name_label"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@+id/save_btn"
        android:paddingLeft="5dp"
        android:text="@string/current_pass" 
        android:textColor="@color/gray1"/>

    <TextView
        android:id="@+id/new_pass_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/current_pass_label"
        android:layout_below="@+id/edit_current_pass_field"
        android:layout_marginTop="26dp"
        android:paddingLeft="5dp"
        android:text="@string/new_pass" 
        android:textColor="@color/gray1"/>

    <TextView
        android:id="@+id/confirm_pass_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_pass_label"
        android:layout_below="@+id/edit_new_pass_field"
        android:layout_marginTop="25dp"
        android:paddingLeft="5dp"
        android:text="@string/conf_pass" 
        android:textColor="@color/gray1"/>

    <ImageView
        android:id="@+id/log_out_btn"
        style="@style/AppBaseTheme"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:alpha="0.7"
        android:background="@drawable/buttonshape"
        android:gravity="center_horizontal"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/log_out_btn"
        android:layout_alignLeft="@+id/log_out_btn"
        android:layout_alignRight="@+id/log_out_btn"
        android:layout_alignTop="@+id/log_out_btn"
        android:gravity="center_vertical|center_horizontal"
        android:text="Log Out" 
        android:textColor="@color/gray1"/>

    <ImageView
        android:id="@+id/register_btn"
        style="@style/AppBaseTheme"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_above="@+id/log_out_btn"
        android:layout_alignLeft="@+id/log_out_btn"
        android:layout_marginBottom="14dp"
        android:alpha="0.7"
        android:background="@drawable/buttonshape"
        android:gravity="center_horizontal"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/register_btn"
        android:layout_alignLeft="@+id/register_btn"
        android:layout_alignRight="@+id/register_btn"
        android:layout_alignTop="@+id/register_btn"
        android:gravity="center_vertical|center_horizontal"
        android:text="Save"
        android:textColor="@color/gray1" />

</RelativeLayout>